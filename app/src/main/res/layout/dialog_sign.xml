<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow"
    android:padding="@dimen/length_20">

    <com.szfp.n58.widget.sign.LinePathView
        android:id="@+id/signView"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/length_10"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:id="@+id/bt_sign_clear"
            android:textColor="@color/red"
            android:background="@drawable/shadow"
            android:layout_height="wrap_content"
            android:text="clean"
            android:layout_weight="1" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/bt_sign_save"
            android:textColor="@color/category_text_color"
            android:text="save"
            android:layout_weight="1"
            android:background="@drawable/shadow" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="back"
            android:id="@+id/bt_sign_black"
            android:textColor="@color/text_black"
            android:layout_weight="1"
            android:background="@drawable/shadow" />
    </LinearLayout>

</LinearLayout>